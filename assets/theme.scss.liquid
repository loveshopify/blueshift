$local-photo-gutter: 7px;

.instagram-photos {
  width: calc(100% + #{2 * $local-photo-gutter});
  margin-left: - $local-photo-gutter;

  @include media($min: $breakpoint-s) {
    width: calc(100% + #{4 * $local-photo-gutter});
