<div id="product-photos" class="">
  {% assign featured_image = product.selected_or_first_available_variant.featured_image | default: product.featured_image %}
  <div id="bigimage" class="bigimage-{{ product.id }}">
    <img class="mainimage" id="{{ product.id }}" data-image-id="{{ image.id }}" src="{{ featured_image | img_url: 'master' }}" alt='{{ image.alt }}' title="{{ product.title }}"/>   
  </div>
  {% if product.images.size > 1 %} 
  <div class="thumbnails">
    {% for image in product.images %}
    <a id="{{ forloop.index }}"  href="{{ image | product_img_url: 'master' }}" data-image-id="{{ image.id }}" class="{% if forloop.first %}active {% endif %}thumb">
      <img class="thumbnail" src="{{ image | product_img_url: 'medium' }}" alt="{{ image.alt | escape }}" data-image-id="{{ image.id }}" />
    </a>
    {% endfor %} 
  </div>
  {% endif %}
</div>